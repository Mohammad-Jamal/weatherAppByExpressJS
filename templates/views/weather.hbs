<!DOCTYPE html>
<html lang="en">
  <head>
    {{>headerLinks}}
    <title>Home Page</title>
  </head>
  <body>
    <!-- ========== navbar ========== -->
    {{>navbar}}
    <!-- =========navbar ========== -->
    
    <!-- ========== main header ========== -->
    <div class="container-fluid main_header">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          <div class="main_content">
            <form class="temp_form">
              <input type="text" id="cityName" autocomplete="off" placeholder="Enter your city name" />
              <input type="submit" value="search" id="submitBtn">
            </form>
          </div>
          <div class="tempInformation">
            <div class="top_layer">
              <p id="day">Sat</p>
              <p id="today_date">29 JUN</p>
            </div>
            <div class="main_layer">
              <p id="city_name">Get Output Here</p>
              <div class="middle_layer data_hide">
                <p id="temp"><span class="temp_real_value">0</span><sup>o</sup>C</p>
                <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- =========main header ========== -->

    <!-- ========== Footer ========== -->
    {{>footer}}
    <!-- =========Footer ========== -->
    <script src="js/main.js"></script>
    <script>
      const day = document.getElementById("day");
      const today_date = document.getElementById("today_date");

      const getDay = () => {
        const now = new Date();
        const days = ["Sun","Mon","Tue","Wed","Thur","Fri","Sat"];
        let curDay = days[now.getDay()];
        return curDay;
      };

      const getDate = () => {
        const now = new Date();
        const months = ["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec"];
        let date = now.getDate();
        let curMonth = months[now.getMonth()];
        return `${date} | ${curMonth}`;
      }
      day.innerText = getDay();
      today_date.innerText = getDate();
    </script>
  </body>
</html>
